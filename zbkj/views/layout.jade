doctype html
html
  head
    title= title
    meta(name="description", content="login page")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="/libs/bootstrap/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/libs/bootstrap/dist/css/styles.css")
    block stylesheet
  body
    nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type='button')&attributes({
              'data-toggle': 'collapse',
              'data-target': '#sidebar-collapse'
          })
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#')
            span Lumino
            | Admin
          ul.user-menu
            li.dropdown.pull-right
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                span.glyphicon.glyphicon-user
                |  用户信息
                span.caret
              ul.dropdown-menu(role='menu')
                li
                  a(href='#')
                    span.glyphicon.glyphicon-user
                    |  #{user.name}
                li
                  a(href='javascript:void(0)', data-user= user, id="setting")
                    span.glyphicon.glyphicon-cog
                    |  设置
                li
                  a(href='/admin/logout')
                    span.glyphicon.glyphicon-log-out
                    |  登出
    div#sidebar-collapse.sidebar.col-sm-3.col-lg-2
      form(role="search")
        .form-group
          input.form-control(type="text", placeholder="Search")
      ul.nav.menu
        li.active
          a(href="#")
            span.glyphicon.glyphicon-dashboard
            | Dashboard
        li.parent.dropdown
          a.dropdown-toggle(href="#")&attributes({'data-toggle': 'dropdown'})
            span.glyphicon.glyphicon-list
            | 基础管理
            span.icon.pull-right
              em.glyphicon.glyphicon-s.glyphicon-plus
          ul.children.dropdown-menu
            li
              a(href="/admin/userList")
                span.glyphicon.glyphicon-share-alt 用户管理
        li
          a(href="#")
            span.glyphicon.glyphicon-dashboard
            | Dashboard
      div.attribution Template by
        a(href="www.zgt56.com", target="_blank")   ZBKJ
  div.main.col-sm-9.col-sm-offset-3.col-lg-10.col-lg-offset-2
    block main
  include include/userModal
  script(type="text/javascript", src="/libs/jquery/dist/jquery.min.js")
  script(type="text/javascript", src="/libs/bootstrap/dist/js/bootstrap.min.js")
  script(type="text/javascript", src="/javascripts/admin/settingUser.js")
  script(type="text/javascript", src="/javascripts/sidebar.js")
  block script

